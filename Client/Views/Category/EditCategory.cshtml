@model Data.DTOs.CategoryDTO

@{
    ViewData["Title"] = "Edit a category";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>Add Category</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("EditCategory", "Category", FormMethod.Post))
            {
                @Html.Hidden("Id", Model.Id)
                <div class="row mb-2">
                    <div class="col-xl-2 col-lg-2 col-md-12">
                        <label for="title">Title</label>
                    </div>
                    <div class="col-xl-10 col-lg-10">
                        <input id="title" name="Title" type="text" class="form-control" value="@Model.Title" required />
                    </div>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/js/category.js" asp-append-version="true"></script>