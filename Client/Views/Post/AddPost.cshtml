@model IEnumerable<Data.DTOs.CategoryDTO>

@{
    ViewData["Title"] = "Add a new post";
}

<div class="container">
    <div class="card">
        <div class="card-header">
            <h3>Add Post</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddPost", "Post", FormMethod.Post))
            {
                <div class="row mb-2">
                    <div class="col-xl-2 col-lg-2 col-md-12">
                        <label for="title">Title</label>
                    </div>
                    <div class="col-xl-10 col-lg-10">
                        <input id="title" name="Title" type="text" class="form-control" required />
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-xl-2 col-lg-2 col-md-12">
                        <label for="category">Category</label>
                    </div>
                    <div class="col-xl-10 col-lg-10">
                        <select id="category" name="CategoryId" class="form-control" required>
                            <option selected="selected"> - Select a category - </option>
                            @foreach (var category in Model)
                            {
                                <option value="@category.Id">@category.Title</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-xl-2 col-lg-2 col-md-12">
                        <label for="publicationDate">Publication Date</label>
                    </div>
                    <div class="col-xl-10 col-lg-10">
                        <input id="publicationDate" name="PublicationDate" type="text" class="form-control" placeholder="yyyy-mm-dd" required />
                    </div>
                </div>
                <div class="mb-2">
                    <label for="content">Content</label>
                    <textarea id="content" name="Content" class="form-control" required></textarea>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            }
        </div>
    </div>
</div>

<script src="~/js/post.js" asp-append-version="true"></script>