@model Client.Models.IndexViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="card mb-3">
        <div class="card-header">
            <h3 class="d-inline-block">Categories</h3>
            <a asp-action="Add" asp-controller="Category" class="btn btn-primary float-right">Add</a>
        </div>
        <div class="card-body">
            @if (Model.Categories == null || Model.Categories.Count() == 0)
            {
                <p class="card-text">There are currently no categories.</p>
            }
            else
            {
                <ul style="list-style: none;">
                    @foreach (var category in Model.Categories)
                    {
                        <li><a asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id">@category.Title</a></li>
                    }
                </ul>
            }
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="d-inline-block">Posts</h3>
            <a asp-action="Add" asp-controller="Post" class="btn btn-primary float-right">Add</a>
        </div>
        <div class="card-body">
            @if (Model.Posts == null || Model.Posts.Count() == 0)
            {
                <p class="card-text">There are currently no posts.</p>
            }
            else
            {
                <ul style="list-style: none;">
                    @foreach (var post in Model.Posts)
                    {
                        <li><a asp-action="Edit" asp-controller="Post" asp-route-id="@post.Id">@post.Title</a></li>
                    }
                </ul>
            }
        </div>
    </div>
</div>
